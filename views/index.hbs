<link rel='stylesheet' href='/stylesheets/index.css' />
<div class="row">
	{{#if er}}
	<div class="alert alert-danger border border-danger text-center col-12" role="alert">{{msg_arr}}<br></div>
	<p>Welcome to {{title}}!</p>
	{{/if}}
</div>
<div>
	{{#if suc}}
	<p class="alert alert-success border border-success text-center col-12" role="alert">{{msg_arr}}</p>
	{{/if}}
</div>


<div class="users_list row">
	<div class="col-md-2 col-sm-4">
		<form action="/search" method="post" id="advanced" class="form-group my-2 my-lg-0">
			{{!-- <fieldset>
				<legend>Name</legend>
				<div>
					<input class="form-control mr-sm-2" type="search" placeholder="Name" name="search"
						aria-label="Search">

					<button class="btn btn-success my-2 my-sm-0" type="submit">Search</button>
				</div>
			</fieldset> --}}
			<fieldset class="row">
				<legend>Tags</legend>
				<div class="form-check col-xs-2">
					<input class="form-check-input" type="checkbox" name="intrests" value="tatoo" id="tatoo">
					<label class="form-check-label" for="tatoo"><i># Tatoo</i></label>
				</div>
				<div class="form-check col-xs-2">
					<input class="form-check-input" type="checkbox" name="intrests" value="smoke" id="smoke">
					<label class="form-check-label" for="smoke"><i># Smoke</i></label>
				</div>
				<div class="form-check form-check">
					<input class="form-check-input" type="checkbox" name="intrests" value="alcohol" id="alcohol">
					<label class="form-check-label" for="alcohol"><i># Alcohol</i></label></div>
				<div class="form-check form-check">
					<input class="form-check-input" type="checkbox" name="intrests" value="travel" id="travel">
					<label class="form-check-label" for="travel"><i># Travel</i></label></div>
				<div class="form-check form-check">
					<input class="form-check-input" type="checkbox" name="intrests" value="party" id="party">
					<label class="form-check-label" for="party"><i># Party</i></label></div>
				<div class="form-check form-check">
					<input class="form-check-input" type="checkbox" name="intrests" value="social" id="social">
					<label class="form-check-label" for="social"><i># Social</i></label>
				</div>
				<div class="form-check form-check">
					<input class="form-check-input" type="checkbox" name="intrests" value="introvert" id="introvert">
					<label class="form-check-label" for="introvert"><i># Introvert</i></label>
				</div>
				<div class="form-check form-check">
					<input class="form-check-input" type="checkbox" name="intrests" value="sports" id="sports">
					<label class="form-check-label" for="sports"><i># Sports</i></label>
				</div>
				<div class="form-check form-check">
					<input class="form-check-input" type="checkbox" name="intrests" value="excersise" id="excersise">
					<label class="form-check-label" for="excersise"><i># Excersise</i></label>
				</div>
			</fieldset>
			<fieldset class="row">
				<legend>Age</legend>
				<div id="age-min">
					<input class="form-control form-control-sm" type="number" name="age_min" min="18" max="100"
						placeholder="min">
					&nbsp-&nbsp
					<input class="form-control form-control-sm" type="number" name="age_max" min="18" max="100"
						placeholder="max">
				</div>
			</fieldset>
			<fieldset class="row">
				<legend>Fame</legend>
				<input class="form-control form-control-sm" type="number" name="fame_min" min="0" max="5"
					placeholder="min">
				&nbsp-&nbsp
				<input class="form-control form-control-sm" type="number" name="fame_max" min="0" max="5"
					placeholder="max">
			</fieldset>
			<fieldset class="row">
				<legend>Location</legend>
				<input type="text" class="form-control form-control-sm" placeholder="City/Country" name="location">
			</fieldset>
			<br>
			<div class="row">
				<button class="btn btn-success btn-lg btn-block" name="find" type="">Find</button>
			</div>
		</form>
	</div>

	<div class="col-md-10 col-sm-8">
		<div class="inline">
			<span class="inline"><button class="btn btn-primary" onclick="sort_fame()">Sort Fame</button></span>
			<span class="inline"><button class="btn btn-primary" onclick="sort_age()">Sort Age</button></span>
			{{!-- <span class="inline"><button class="btn btn-primary" onclick="sort_tags()">Sort Tags</button></span> --}}
			{{!-- <span class="inline"><button class="btn btn-primary" onclick="sort_locateReset()">Sort
					Location</button></span> --}}
			<span class="inline"><a href="/index"><button class="btn btn-primary">Reset</button></a></span>
		</div>
		<div id="match-list">
			{{#if match_list}}
			{{#each match_list}}
			<div class="users row">
				<a href="/view_profile/{{this._id}}">
					<div class="left ">
						<img src={{this.profile_pic}} alt="Profile Picture" width="150px" height="150px">
					</div>
					<div class="" style="width: 18rem;">
						<div class="card-body">
							<h5 class="card-title">{{this.usr_user}}</h5>
							<h6 class="card-subtitle mb-2 text-muted">{{this.usr_name}} &nbsp; {{this.usr_surname}}</h6>
							<p class="card-text">
								Bio: {{this.bio}}
							</p>
						</div>
					</div>
					<div class="right ">{{this.rating}}/5</div>
				</a>
			</div>
			{{/each}}
			{{/if}}
		</div>
	</div>
</div>

<script src="/javascripts/index.js"></script>