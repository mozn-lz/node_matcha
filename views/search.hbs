<link rel='stylesheet' href='/stylesheets/index.css' />
<div class="row">
	{{#if er}}
	<div class="alert alert-danger border border-danger text-center col-12" role="alert">{{msg_arr}}<br></div>
	<p>Welcome to {{title}}!</p>
	{{/if}}
</div>
<div>
	{{#if suc}}
	<p class="alert alert-success border border-success text-center col-12" role="alert">{{msg_arr}}</p>
	{{/if}}
</div>

<div class="users_list">
	<form action="/search" method="post" class="form-inline my-2 my-lg-0">
		<input class="form-control mr-sm-2" type="search" placeholder="Search" name="search" aria-label="Search">
		<button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
	</form>
	{{#if match_list}}
	{{#each match_list}}
	<a href="/view_profile/{{this._id}}">
		<div class="users row" onclick="goViewProfile(`{{this._id}}`)">
			<div class="left "><img src={{this.profile}} alt="Profile Picture" width="150px" height="150px"></div>
			{{!-- <div class="left col-3"><img src={{this.pic}} alt="Profile Picture"></div> --}}
			<div class="card" style="width: 18rem;">
				<div class="card-body">
					<h5 class="card-title">{{this.usr_user}}</h5>
					<h6 class="card-subtitle mb-2 text-muted">{{this.usr_name}} &nbsp; {{this.usr_surname}}</h6>
					<p class="card-text">
						Bio: {{this.bio}}
					</p>
					<a href="/friendRequest/{{this._id}}" class="card-link btn btn-info">Add</a>
					<a href="/view_messages/{{this._id}}" class="card-link btn btn-info">Send Message</a>
				</div>
			</div>
			<div class="right ">4{{this.rating}}/5</div>
		</div>
	</a>
	{{/each}}
	{{/if}}
</div>

<script src="/javascripts/index.js"></script>