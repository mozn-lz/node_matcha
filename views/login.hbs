<div class="row">
	{{#if error_list}}
	<div class="alert alert-danger border border-danger text-center col-12" role="alert">{{error_list}}<br></div>
	{{/if}}
</div>
<div>
	{{#if username}}
	<p class="alert alert-success border border-success text-center col-12" role="alert">{{username}}</p>
	{{/if}}
</div>

<div class="col-12 text-center">
	<h4>Login</h4>
</div>
<form action="/login" method="post">
	<div class="form-group">
		<label for="email">Email</label>
		<input class="form-control" type="email" name="email" id="email" placeholder="email" required>
	</div>
	<div class="form-group">
		<label for="password">Password</label>
		<input class="form-control" type="password" name="password" id="password" placeholder="password" required>
	</div>
	<div class="col-12 text-center">
		<button class="btn btn-success" type="submit">login</button>
	</div>
</form>

<div class="row fixed-bottom text-center">
	<div class="d-inline">
		<a href="/register"><button class="btn btn-primary">Register</button></a>
	</div>
	&nbsp;
	&nbsp;
	<div class="d-inline float-right">
		<a href="/forgot_password"><button class="btn btn-danger">Forgot Password</button></a>
	</div>
</div>