<div class="col-12 text-center">
	<h4>Reset Password</h4>
</div>
<form action="/reset_password" method="post">
		<input class="form-control" type="hidden" name="email" value={{email}}>
		<input class="form-control" type="hidden" name="code" value={{code}}>
	<div class="form-group">
		<label for="password">Password</label>
		<input class="form-control" type="password" name="password" id="reset_password" placeholder="Password" required>
	</div>
	<div class="form-group">
		<label for="Veryfy Password">Verify Password</label>
		<input class="form-control" type="password" name="confirm_password" id="reset_confirm_password" placeholder="Confirm Password" required>
	</div>
	<div class="form-group">
		<button class="form-control btn btn-success" type="submit" name="code" value={{code}}>Submit</button>
	</div>
</form>

<link rel='stylesheet' href='/stylesheets/forgot_password.css' />

<script>

	$('#reset_password').change(() => {
		if (validate_password($('#reset_password').val())) {
			$('#reset_password').css('border-color', 'green');
		} else {
			$('#reset_password').css('border-color', 'red');
		}
	});
	$('#reset_confirm_password').change(() => {
		if (validate_password($('#reset_confirm_password').val()) &&
			$('#reset_password').val() === $('#reset_confirm_password').val()) {
			$('#reset_confirm_password').css('border-color', 'green');
		} else {
			$('#reset_confirm_password').css('border-color', 'red');
		}
	});
</script>
