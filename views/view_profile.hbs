{{!-- <link rel='stylesheet' href='/stylesheets/profile.css' /> --}}
<style>
	#visit_history {
		height: 400px;
		overflow-y: scroll;
	}
</style>
<div class="row">
	<div class="col-md-6">
		<div class="card" style="width: 25rem;">
			<img class="card-img-top" src="{{picture}}" alt="profile picture">
			<div class="card-body">
				<h5 class="card-title">{{username}} &nbsp; {{age}}</h5>
				{{fname}} &nbsp{{lname}} <br>
				<p class="card-text text-muted">
					{{bio}}
				</p>
			</div>
			<ul class="list-group list-group-flush">
				<li class="list-group-item">
					<ul>
						<li>Fame rating: {{rating}}/5 </li>
						<li>Gender: <i>{{gender}}</i></li>
						<li>Sexual Oriantation: <i>{{oriantation}}</i></li>
					</ul>
				</li>
				<li class="list-group-item">
					{{#if intrests.tatoo}}#Tatoo  {{/if}}
					{{#if intrests.smoke}}#Smoke  {{/if}}
					{{#if intrests.alcohol}}#Alcohol  {{/if}}
					{{#if intrests.travel}}#Travel  {{/if}}
					{{#if intrests.party}}#Party  {{/if}}
					{{#if intrests.social}}#Social  {{/if}}
					{{#if intrests.introvert}}#Introvert  {{/if}}
					{{#if intrests.excersise}}#Excersise  {{/if}}
					{{#if intrests.sports}}#Sports  {{/if}}
					{{intrests}}
					
				</li>
				<li class="list-group-item">Online: {{checkin}}</li>
				{{!-- <li class="list-group-item">Vestibulum at eros</li> --}}
			</ul>
			<div class="card-body">
				{{!-- <a href="/friendRequest/{{this._id}}" class="card-link">Add</a> --}}
				{{!-- <a href="/friendRequest/"+{{this._id}}><button>Add</button></a> --}}
				<form action="/friendRequest" method="post">
					<input type="hidden" name="friendId" value={{id}}>
					<button type="submit" name="submit" value="add">Add</button>
					<button type="submit" name="submit" value="block">Block</button>
					<button type="submit" name="submit" value="fake">Fake Account</button>
				</form>
			</div>
		</div>
	</div>
	<div class="col-md-6">
		<ul class="list-group" id="visit_history">
			<li class="list-group-item">
				<div class="row">
					<div class="inline">
						<div><h6><u><b>Visit History</b></u></h6></div>
					</div>
				</div>
			</li>
			{{#if history}}
			{{#each history}}
			<li class="list-group-item">
				<div class="row">
					<div class="inline">
						<div><b>{{this.name}} &nbsp {{this.surname}}</b></div>
						<div class="time"><i>{{this.date}}</i></div>
					</div>
				</div>
			</li>
			{{/each}}
			{{/if}}
		</ul>
	</div>
</div>
<script src="/javascripts/view_profile.js"></script>
